{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://teal.garden/process.json",
  "title": "Process",
  "definitions": {
    "category": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Online Collaboration",
          "Meetings",
          "Decision Making",
          "Payment & Incentives",
          "To-dos",
          "Commitment: Working Hours and Flexibility",
          "Crypto"
        ]
      }
    },
    "role": {
      "$id": "#root/role",
      "title": "Role",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "purpose": {
          "type": "string"
        },
        "domains": {
          "type": "array"
        },
        "accountabilities": {
          "type": "array"
        }
      },
      "required": [
        "title",
        "purpose",
        "accountabilities"
      ]
    },
    "element": {
      "$id": "#root/element",
      "title": "Element",
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "type": "array"
        },
        "type": {
          "type": "string",
          "enum": [
            "value",
            "policy",
            "tool",
            "structure",
            "step"
          ]
        }
      },
      "required": [
        "name",
        "type"
      ]
    }
  },
  "type": "object",
  "required": [
    "id",
    "title",
    "categories",
    "summary",
    "addoptionRequirements",
    "components",
    "instructions",
    "author",
    "authorWallet"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "categories": {
      "$ref": "#/definitions/category"
    },
    "summary": {
      "type": "object",
      "required": [
        "abstract",
        "benefits"
      ],
      "properties": {
        "abstract": {
          "type": "string"
        },
        "benefits": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      }
    },
    "addoptionRequirements": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/element"
        }
      ]
    },
    "components": {
      "type": "array",
      "items": [
        {
          "anyOf": [
            {
              "$ref": "#/definitions/element"
            },
            {
              "$ref": "#/definitions/role"
            }
          ]
        }
      ]
    },
    "instructions": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "steps",
          "tool"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "steps": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "$ref": "#/definitions/element"
            }
          },
          "tool": {
            "$ref": "#/definitions/element"
          }
        }
      }
    },
    "examples": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "authorWallet": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{40}$"
    }
  }
}