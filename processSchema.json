{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://teal.garden/process.json",
  "title": "Process",
  "definitions": {
    "category": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Online Collaboration",
          "Meetings",
          "Decision Making",
          "Payment & Incentives",
          "To-dos",
          "Commitment: Working Hours and Flexibility",
          "Crypto"
        ]
      }
    },
    "role": {
      "$id": "#root/role",
      "title": "Role",
      "type": "object",
      "properties": {
        "title": "string",
        "purpose": "string",
        "domains": "array",
        "accountabilities": "array"
      },
      "required": [
        "title",
        "purpose",
        "accountabilities"
      ]
    },
    "element": {
      "$id": "#root/element",
      "type": "object",
      "properties": {
        "name": "string",
        "description": "string",
        "url": "array",
        "type": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "value",
              "policy",
              "tool",
              "structure",
              "step"
            ]
          }
        }
      },
      "required": [
        "name",
        "type"
      ]
    }
  },
  "type": "object",
  "required": [
    "id",
    "title",
    "categories",
    "summary",
    "addoptionRequirements",
    "components",
    "instructions"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "categories": {
      "$ref": "#/definitions/category"
    },
    "summary": {
      "type": "object",
      "required": [
        "abstract",
        "benefits"
      ],
      "properties": {
        "abstract": {
          "type": "string"
        },
        "benefits": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      }
    },
    "addoptionRequirements": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/element"
        }
      ]
    },
    "components": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/element"
        },
        {
          "$ref": "#/definitions/role"
        }
      ]
    },
    "instructions": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "steps",
          "tool"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "steps": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "$ref": "#/definitions/element"
            }
          },
          "tool": {
            "$ref": "#/definitions/element"
          }
        }
      }
    },
    "examples": {
      "type": "string"
    }
  }
}